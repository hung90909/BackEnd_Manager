<div style="width: 400px; height: max-content; background-color: white; padding: 25px; margin-top: 55px;
  border-radius: 20px ; margin-left: 400px;">
    <h3 class="text-center" style="font-weight: bold;"> Sửa Loại SP</h3>

    <form action="/typeProduct/updateLoaiSP/{{item._id}}?_method=PUT" method="POST" style="margin-top: 20px;" enctype="multipart/form-data">
      <div class="form-group">
            <div>
                <label for="name">Tên loại SP:</label>
                <input type="text" class="form-control" id="name" placeholder="Enter name" name="name"
                    value="{{item.name}}">
            </div>
       </div>
        <div class="form-group">
            <p for="image">Hình ảnh:</p>
            <img id="img-preview" style="width: 50px; height: 50px; border-radius: 50%; margin-bottom: 10px;"
                src="{{item.image}}" />
            <input type="file" class="form-control-file" id="img" name="image">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/typeProduct/getAllLoaiSP" class="btn btn-default">Cancel</a>
    </form>
</div>

<script>
    const imgInput = document.getElementById('img');
    const imgPreview = document.getElementById('img-preview');

    imgInput.addEventListener('change', () => {
        const file = imgInput.files[0];
        const reader = new FileReader();

        reader.addEventListener("load", function () {
            imgPreview.src = reader.result;
        }, false);

        if (file) {
            reader.readAsDataURL(file);
        }
    });
</script>